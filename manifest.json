{
  "manifest_version": 3,
  "name": "Universal Web Scraper",
  "version": "1.0",
  "permissions": [
    "scripting",
    "storage",
    "downloads",
    "activeTab",
    "webNavigation",
    "webRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.webp",
      "48": "icon.webp",
      "128": "icon.webp"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}